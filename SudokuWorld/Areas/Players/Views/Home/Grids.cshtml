@model IEnumerable<SudokuWorld.Models.Grid>

@{
    ViewData["Title"] = "Grids";
}

    <div class="row">
        @foreach (var grid in Model)
        {
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Sudoku numéro @grid.Id</h5>
                        <p class="card-text">Ce sudoku à été complé @grid.NbTimesCompleted fois et le temps record pour le complété est de @grid.Record secondes.</p>
                        <a asp-area="Players" asp-controller="Grille" asp-action="Index" asp-route-id="@grid.Id" class="btn btn-primary">Essayez de battre ce record</a>
                    </div>
                </div>
            </div>
        }
    </div>
