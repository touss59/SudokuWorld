@model List<Rank>
@{
    ViewData["Title"] = "Ranks";
}

<h1>Ranks of Users</h1>
<table id="rankUsers">
    <thead>
        <tr>
            <th>Rank</th>
            <th>User Name</th>
            <th>XP</th>
        </tr>
    </thead>
    <tbody>
        @for (int i=0; i<Model.Count;i++)
        {
            int count = i + 1;
            <tr>
                <td>@count</td>
                <td>@Model.ElementAt(i).UserName</td>
                <td>@Model.ElementAt(i).XP</td>
            </tr>
        }
    </tbody>
</table>


<script>
    $(document).ready(function () {
        $('#rankUsers').DataTable();
    });
</script>